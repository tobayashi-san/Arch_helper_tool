
/* ========== GLOBAL FIXES ========== */
QMainWindow {
    background-color: #f8f9fa;
    color: #212529;
    font-family: -apple-system, BlinkMacSystemFont, Segoe UI, system-ui, sans-serif;
    font-size: 13px;
}

QWidget {
    color: #212529;
    background-color: white;
}





/* ========== SIDEBAR FIXES ========== */
QFrame#sidebar {
    border-right: 1px solid #dee2e6;
}

QFrame#sidebarHeader {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
    stop:0 #4f46e5, stop:1 #3730a3);
    border-radius: 12px;
    border: none;
}

QLabel#appTitle {
    color: white;
    font-size: 18px;
    font-weight: bold;
    background-color: transparent;
}

QLabel#appSubtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 12px;
    background-color: transparent;
}

QLabel#sectionTitle {
    font-size: 14px;
    font-weight: 600;
    color: #495057;
    margin: 8px 0px 4px 0px;
    background-color: transparent;
}

/* ========== SEARCH BOX FIXES ========== */
QLineEdit#searchBox {
    padding: 12px 16px;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    font-size: 13px;
    background-color: #ffffff;
    color: #212529;
}

QLineEdit#searchBox:focus {
    border-color: #4f46e5;
    background-color: white;
    outline: none;
    color: #212529;
}

/* ========== CATEGORIES LIST FIXES ========== */
QListWidget#categoriesList {
    border: 1px solid #e9ecef;
    border-radius: 8px;
    background-color: transparent;
    padding: 4px;
    outline: none;
    color: #212529;
}

QListWidget#categoriesList::item {
    padding: 12px;
    border-radius: 6px;
    margin: 2px 0px;
    border: none;
    color: #212529;
    background-color: transparent;
}

QListWidget#categoriesList::item:hover {
    background-color: #f1f3f4;
    color: #212529;
}

QListWidget#categoriesList::item:selected {
    background-color: #4f46e5;
    color: white;
}

/* ========== BUTTON FIXES ========== */
QPushButton#primaryButton {
    background-color: #4f46e5;
    color: white;
    border: none;
    padding: 12px 16px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 13px;
}

QPushButton#primaryButton:hover {
    background-color: #3730a3;
    color: white;
}

QPushButton#secondaryButton {
    background-color: #ffffff;
    color: #495057;
    border: 2px solid #dee2e6;
    padding: 12px 16px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 13px;
}

QPushButton#secondaryButton:hover {
    background-color: #f8f9fa;
    border-color: #adb5bd;
    color: #495057;
}

QPushButton#successButton {
    background-color: #10b981;
    color: white;
    border: none;
    padding: 10px 16px;
    border-radius: 6px;
    font-weight: 600;
}

QPushButton#successButton:hover {
    background-color: #059669;
    color: white;
}

QPushButton#dangerButton {
    background-color: #ef4444;
    color: white;
    border: none;
    padding: 10px 16px;
    border-radius: 6px;
    font-weight: 600;
}

QPushButton#dangerButton:hover {
    background-color: #dc2626;
    color: white;
}



/* ========== TAB WIDGET FIXES ========== */
QTabWidget#mainTabs::pane {
    border: 1px solid #e9ecef;
    border-top: none;
    background-color: pink;
}

QTabWidget#mainTabs::tab-bar {
    alignment: left;
}

QTabWidget#mainTabs QTabBar::tab {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-bottom: none;
    padding: 12px 20px;
    margin-right: 2px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-weight: 600;
    color: #495057;
}

QTabWidget#mainTabs QTabBar::tab:selected {
    background-color: white;
    border-bottom: 1px solid white;
    color: #4f46e5;
}

QTabWidget#mainTabs QTabBar::tab:hover:!selected {
    background-color: #e9ecef;
    color: #495057;
}

/* ========== TAB TITLE FIXES ========== */
QLabel#tabTitle {
    font-size: 20px;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 8px;
    background-color: transparent;
}

/* ========== TABLE FIXES ========== */
QTableWidget#historyTable {
    border: 1px solid #e9ecef;
    border-radius: 8px;
    background-color: white;
    gridline-color: #f1f3f4;
    selection-background-color: #eff6ff;
    color: #212529;
}

QTableWidget#historyTable::item {
    padding: 8px;
    border: none;
    color: #212529;
    background-color: transparent;
}

QTableWidget#historyTable::item:selected {
    background-color: #dbeafe;
    color: #1e40af;
}

QTableWidget#historyTable::item:alternate {
    background-color: #f8f9fa;
}

QHeaderView::section {
    background-color: #f8f9fa;
    border: none;
    border-bottom: 2px solid #e9ecef;
    padding: 8px 12px;
    font-weight: 600;
    color: #495057;
}

/* ========== SCROLL AREA FIXES ========== */
QScrollArea#toolsScrollArea,
QScrollArea#statsScrollArea {
    border: none;
    background-color: #fafbfc;
}

QScrollArea#toolsScrollArea QWidget {
    background-color: #fafbfc;
}

QScrollArea#statsScrollArea QWidget {
    background-color: #fafbfc;
}

/* ========== STATUS BAR FIXES ========== */
QStatusBar {
    background-color: violet;
    border-top: 1px solid #dee2e6;
    color: #6c757d;
}

QStatusBar QLabel {
    color: #6c757d;
    background-color: transparent;
}


/* ========== CATEGORY HEADER FIXES ========== */
QFrame#categoryHeader {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
    stop:0 #667eea, stop:1 #764ba2);
    border-radius: 16px;
    padding: 24px;
    margin: 0px;
}

QLabel#categoryTitle {
    font-size: 24px;
    font-weight: bold;
    background: transparent;
}

QLabel#countBadge {
    background-color: rgba(255, 255, 255, 0.2);
    padding: 6px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: bold;
    border: 2px solid rgba(255, 255, 255, 0.3);
}

QLabel#categoryDescription {
    color: rgba(255, 255, 255, 0.9);
    font-size: 14px;
    background: transparent;
    line-height: 1.4;
}

/* ========== CONTROL PANEL FIXES ========== */
QFrame#controlPanel {
    background-color: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 16px;
}

QLabel#selectionStats {
    font-size: 14px;
    color: #6b7280;
    font-weight: 600;
    padding: 8px 0px;
    background-color: transparent;
}

QPushButton#executeSelectedButton {
    background-color: #4f46e5;
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: bold;
    min-width: 200px;
}

QPushButton#executeSelectedButton:hover {
    background-color: #3730a3;
    color: white;
}

QPushButton#executeSelectedButton:disabled {
    background-color: #d1d5db;
    color: #9ca3af;
}

/* ========== SELECTION BUTTON FIXES ========== */
QPushButton#selectionButton {
    background-color: #ffffff;
    color: #374151;
    border: 2px solid #d1d5db;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    min-width: 90px;
}

QPushButton#selectionButton:hover {
    background-color: #f9fafb;
    border-color: #9ca3af;
    color: #374151;
}

QPushButton#selectionButton:pressed {
    background-color: #f3f4f6;
    color: #374151;
}

/* ========== VIEW TOGGLE FIXES ========== */
QPushButton#gridButton, QPushButton#listButton {
    background-color: #f9fafb;
    color: #6b7280;
    border: 1px solid #d1d5db;
    padding: 6px 12px;
    font-size: 11px;
    font-weight: 600;
    min-width: 60px;
}

QPushButton#gridButton:hover, QPushButton#listButton:hover {
    background-color: #f3f4f6;
    color: #6b7280;
}

QPushButton#gridButton:checked, QPushButton#listButton:checked {
    background-color: #4f46e5;
    color: white;
    border-color: #4f46e5;
}

/* ========== TOOL CARD FIXES ========== */
QWidget#toolCard {
    background-color: white;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    margin: 4px;
}

QWidget#toolCard:hover {
    border-color: #4f46e5;
    background-color: #fafbff;
}

QLabel#toolTitle {
    font-size: 14px;
    font-weight: bold;
    color: #1f2937;
    margin: 0px;
    background-color: transparent;
}

QLabel#toolDescription {
    font-size: 12px;
    color: #6b7280;
    line-height: 1.4;
    background-color: transparent;
}

QLabel#commandPreview {
    font-size: 10px;
    font-family: 'Consolas', 'Monaco', monospace;
    color: #9ca3af;
    background-color: #f3f4f6;
    padding: 4px 8px;
    border-radius: 4px;
    border: 1px solid #e5e7eb;
}

QLabel#toolTag {
    background-color: #ddd6fe;
    color: #5b21b6;
    padding: 2px 6px;
    border-radius: 8px;
    font-size: 9px;
    font-weight: bold;
    border: 1px solid #c4b5fd;
}

QLabel#moreTagsLabel {
    font-size: 9px;
    color: #9ca3af;
    font-weight: bold;
    background-color: transparent;
}

QLabel#categoryLabel {
    font-size: 9px;
    color: #6b7280;
    font-weight: 600;
    background-color: transparent;
}

/* ========== CHECKBOX FIXES ========== */
QCheckBox#toolCheckbox {
    spacing: 4px;
}

QCheckBox#toolCheckbox::indicator {
    width: 20px;
    height: 20px;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    background-color: white;
}

QCheckBox#toolCheckbox::indicator:hover {
    border-color: #4f46e5;
    background-color: #f0f9ff;
}

QCheckBox#toolCheckbox::indicator:checked {
    background-color: #4f46e5;
    border-color: #4f46e5;
}

QPushButton#executeButton {
    background-color: #10b981;
    border: 1px;
    border-radius: 16px;
    font-size: 14px;
    font-weight: bold;
}

QPushButton#executeButton:hover {
    background-color: #059669;
}

QPushButton#executeButton:pressed {
    background-color: #047857;

}

/* ========== SEARCH RESULT FIXES ========== */
QFrame#searchHeader {
    background-color: #eff6ff;
    border: 1px solid #bfdbfe;
    border-radius: 8px;
    padding: 16px;
}

QFrame#searchResult {
    background-color: white;
    border: 1px solid #e9ecef;
    border-radius: 6px;
    padding: 12px;
    margin: 4px 0px;
}

QFrame#searchResult:hover {
    border-color: #4f46e5;
    background-color: #fafbff;
}

/* ========== NO RESULTS WIDGET FIXES ========== */
QFrame#noResults {
    background-color: transparent;
    border: 1px solid pink;
    border-radius: 8px;
    padding: 24px;
}


/* ========== OUTPUT WIDGET FIXES ========== */
QFrame#outputHeader {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
    padding: 8px 16px;
}

QPushButton#toggleButton, QPushButton#clearButton, QPushButton#hideButton {
    background-color: #f8f9fa;
    color: #495057;
    border: 1px solid #dee2e6;
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
}

QPushButton#toggleButton:hover, QPushButton#clearButton:hover, QPushButton#hideButton:hover {
    background-color: #e9ecef;
    color: #495057;
}

QPushButton#toggleButton:checked {
    background-color: #4f46e5;
    color: white;
    border-color: #4f46e5;
}

/* ========== OUTPUT TABS FIXES ========== */
QTabWidget#outputTabs::pane {
    border: none;
    background-color: #1e1e1e;
}

QTabWidget#outputTabs QTabBar::tab {
    background-color: #2d2d2d;
    color: #ffffff;
    border: none;
    padding: 8px 16px;
    margin-right: 2px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    font-size: 12px;
    font-weight: 600;
}

QTabWidget#outputTabs QTabBar::tab:selected {
    background-color: #1e1e1e;
    color: #4fc3f7;
}

QTabWidget#outputTabs QTabBar::tab:hover:!selected {
    background-color: #404040;
    color: #ffffff;
}

/* ========== OUTPUT TEXT EDIT FIXES ========== */
QTextEdit#output_combined, QTextEdit#output_stdout, QTextEdit#output_stderr {
    background-color: #1e1e1e;
    color: #ffffff;
    border: none;
    padding: 8px;
    font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
    font-size: 11px;
    line-height: 1.4;
}

/* ========== SCROLL BAR FIXES ========== */
QScrollBar:vertical {
    background-color: #f3f4f6;
    width: 8px;
    border-radius: 4px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #d1d5db;
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #9ca3af;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

QScrollBar:horizontal {
    background-color: #f3f4f6;
    height: 8px;
    border-radius: 4px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #d1d5db;
    border-radius: 4px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #9ca3af;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
}

/* ========== MESSAGE BOX FIXES ========== */
QMessageBox {
    background-color: white;
    color: #1f2937;
}

QMessageBox QLabel {
    color: #1f2937;
    background-color: transparent;
}

QMessageBox QPushButton {
    background-color: #4f46e5;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    font-weight: 600;
    min-width: 80px;
}

QMessageBox QPushButton:hover {
    background-color: #3730a3;
    color: white;
}

